[color]
        diff = auto
        status = auto
        branch = auto
[core]
        excludesfile = <%= ENV['HOME'] %>/.gitignore
        autocrlf = input
[apply]
        whitespace = nowarn
[format]
        pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[gist]
        browse = yes
        private = yes
[credential]
        helper = <%= RbConfig::CONFIG['host_os'] =~ /darwin|mac os/ ? 'osxkeychain' : 'cache --timeout=43200' %>
[cleanup]
        cleanup = "!git branch --merged | grep -v master | xargs -i git branch -d {}"
